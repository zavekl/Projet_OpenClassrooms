<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/avatarUrlImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        tools:src="@color/cardview_dark_background" />

    <Button
        android:id="@+id/backImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:backgroundTint="@color/colorwhite"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favoriteImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avatarUrlImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="-18dp"
        android:backgroundTint="@color/colorwhite"
        android:src="@drawable/ic_star_black_fill_24dp"
        android:tint="@color/coloryellow" />

    <TextView
        android:id="@+id/name1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avatarUrlImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Caroline" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardiview1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/avatarUrlImageView"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name2TextView"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    tools:text="Caroline"/>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/locationImageView"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/ic_location_on_black_24dp"
                            android:backgroundTint="@color/colorpurple"/>

                        <TextView
                            android:id="@+id/locationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginStart="25dp"
                            android:textSize="20sp"
                            tools:text="Caroline"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phoneImageView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_call_black_24dp"
                        android:backgroundTint="@color/colorpurple"/>

                    <TextView
                        android:id="@+id/phoneTextView"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="25dp"
                        android:textSize="20sp"
                        tools:text="Caroline"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fbImageView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_language_black_24dp"
                        android:backgroundTint="@color/colorpurple"/>

                    <TextView
                        android:id="@+id/fbTextView"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="25dp"
                        android:textSize="20sp"
                        tools:text="Caroline"/>

                </LinearLayout>

            </LinearLayout>

            </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardiview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardiview1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="A propos de moi"/>

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    tools:text="Carolineaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaaaaaa aaaaaaaa"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>